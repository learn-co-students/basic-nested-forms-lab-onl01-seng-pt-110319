<%= form_for @recipe do |f| %>
    <h2><%= f.label "Recipe title" %></h2>
    <%= f.text_field :title %> <br><br>

<h2>Ingredients</h2>
<%= f.fields_for :ingredients do |i|%>
    <%= i.label :name %>
    <%= i.text_field :name%> <br><br>

    <%= i.label :quantity %>
    <%= i.text_field :quantity%>
    <br><br><br>
<% end %>
    <br>
    <%= f.submit %>
<% end %>